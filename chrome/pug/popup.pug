head
	link(href='css/popup.css',rel="stylesheet")
	script(src="popup.js")
body
	header
		.preloader
	.main
		.container
			p.title <span>Seo</span>Grab 
			.block
				.block__info
					p.block__title Page Title:
					.block__subtitle
						p.lenght <span class="lenght-title"></span>/70 ch
				.block__input
					.testTitle
					input.copy-text.page-title(type="text" name="page-title" value="")
					span.copy Copy
			.block
				p.block__title.block__title--sm Meta:
				.block__info
					p.block__title Description:
					.block__subtitle
						p.lenght <span class="lenght-description"></span>/160 ch
				.block__input
					textarea.copy-text.page-description(name="description")
					span.copy Copy
			#clickbtn Click
			label.switch
				input(type="checkbox" class="switch-input")
				span(class="switch-label" data-on="On" data-off="Off")
				span(class="switch-handle")